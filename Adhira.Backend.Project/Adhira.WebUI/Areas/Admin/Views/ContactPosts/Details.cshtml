@model ContactPost
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Contact</h4>
                    @*<span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>*@
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index" asp-controller="dashboard"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="card p-3">
        <div class="card-block">
            <div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Comment" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Comment</p>
                    </div>
                </div>
                @if (Model.AnswerByUserId != null)
                {
                    <div class="form-group row">
                        <label asp-for="Answer" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="form-control">@Model.Answer</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AnsweredDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="form-control">@Model.AnsweredDate?.ToString("dd.MM.yyyy HH:mm:ss")</p>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        @if (Model.AnswerByUserId == null)
                        {
                            <a asp-action="Answer" asp-route-id="@Model.Id" class="btn btn-warning btn-icon"><i class="icofont-pencil-alt-5"></i></a>
                        }
                        | <a asp-action="Index" class="btn btn-info btn-icon"><i class="icofont-arrow-left"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


